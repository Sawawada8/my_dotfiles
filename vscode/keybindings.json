// 既定値を上書きするには、このファイル内にキー バインドを挿入しますauto[]
[
  {
    "key": "ctrl+m",
    "command": "editor.emmet.action.balanceOut"
  },
  /* coursor move when vim insert mode */
  {
    "key": "ctrl+e",
    "command": "cursorLineEnd",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+a",
    "command": "cursorLineStart",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+d",
    "command": "deleteRight",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+j",
    "command": "editor.action.joinLines",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Insert'"
  },
  // {
  //   "key": "ctrl+v",
  //   "command": "cursorWordEndRight",
  //   "when": "textInputFocus"
  // },
  {
    "key": "ctrl+,",
    "command": "cursorWordLeft",
    "when": "textInputFocus"
  },
  {
    "key": "shift+ctrl+v",
    "command": "cursorWordEndRightSelect",
    "when": "textInputFocus"
  },
  {
    "key": "shift+ctrl+,",
    "command": "cursorWordEndLeftSelect",
    "when": "textInputFocus"
  },
  {
    /* line move */ "key": "ctrl+cmd+i",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+cmd+k",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    /* current line copy */ "key": "ctrl+alt+i",
    "command": "editor.action.copyLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+alt+k",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  //   {
  //     "key": "ctrl+[Equal]",
  //     "command": "workbench.action.openEditorAtIndex"
  //   },
  /* workspace move */
  {
    "key": "ctrl+cmd+[Quote]",
    "command": "workbench.action.focusNextGroup"
  },
  {
    "key": "ctrl+cmd+[Semicolon]",
    "command": "workbench.action.focusPreviousGroup"
  },
  /* move focuse fileTree */
  //   { // jis setting
  //     "key": "ctrl+cmd+]",
  //     "command": "workbench.view.explorer",
  //     "when": "viewContainer.workbench.view.explorer.enabled"
  //   },
  {
    // us setting
    "key": "ctrl+cmd+'",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  {
    "key": "shift+cmd+e",
    "command": "-workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  /* fileTree actions */
  {
    "key": "cmd+n",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "cmd+d",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
  },
  /* terminal actions */
  {
    "key": "ctrl+]",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+/",
    "command": "workbench.action.terminal.focus"
    // "when": "editorTextFocus"
  },
  {
    "key": "ctrl+g",
    "command": "-workbench.action.gotoLine"
  },
  {
    // left text editor focus
    "key": "ctrl+/",
    "command": "workbench.action.focusFirstEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+cmd+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active && !gitlens:disabled && config.gitlens.keymap == 'chorded'"
  },
  {
    "key": "ctrl+shift+g",
    "command": "-workbench.view.scm",
    "when": "workbench.scm.active && !gitlens:disabled && config.gitlens.keymap == 'chorded'"
  },
  {
    "key": "shift+a",
    "command": "git.stage",
    "when": "isInDiffEditor"
  },
  // {
  //   "key": "space [",
  //   "command": "extension.jumpy-exit"
  // },
  // {
  //   "key": "space ;",
  //   "command": "extension.jumpy-line"
  // },
  // {
  //   "key": "space '",
  //   "command": "extension.jumpy-word"
  // },
  /*
  {// latest open project
    "key": "ctrl+r",
    "command": "workbench.action.openRecent",
    "when": "editorTextFocus"
  }
 */
  {
    "key": "cmd+k cmd+k",
    "command": "workbench.action.tasks.runTask",
    "args": "kotlinc"
  },
  {
    "key": "cmd+k cmd+l",
    "command": "workbench.action.tasks.runTask",
    "args": "execjar"
  },
  {
    "key": "cmd+;",
    "command": "workbench.action.previousPanelView"
  },
  {
    "key": "cmd+'",
    "command": "workbench.action.nextPanelView"
  },
  {
    "key": "shift+cmd+8",
    "command": "editor.action.marker.nextInFiles",
    "when": "editorFocus"
  },
  {
    "key": "f8",
    "command": "-editor.action.marker.nextInFiles",
    "when": "editorFocus"
  },
  {
    "key": "shift+cmd+9",
    "command": "editor.action.marker.prevInFiles",
    "when": "editorFocus"
  },
  {
    "key": "shift+f8",
    "command": "-editor.action.marker.prevInFiles",
    "when": "editorFocus"
  }
]
